<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="454dp"
        android:layout_height="736dp"
        android:alpha="0.5"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/menu_back" />

    <Switch
        android:id="@+id/musicEnable"
        android:layout_width="225dp"
        android:layout_height="80dp"
        android:checked="true"
        android:shadowColor="#000000"
        android:shadowDx="3.6"
        android:shadowDy="2.1"
        android:shadowRadius="1.9"
        android:text="Play music"
        android:textColor="@color/gold"
        android:textColorLink="@color/gold"
        android:textSize="24sp"
        android:thumbTint="@color/gold"
        android:thumbTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.215"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.279"
        tools:checked="false" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="412dp"
        android:layout_height="83dp"
        android:gravity="center_vertical"
        android:paddingStart="40dp"
        android:shadowColor="#000000"
        android:shadowDx="3.6"
        android:shadowDy="2.1"
        android:shadowRadius="1.9"
        android:text="Music"
        android:textColor="#FFD700"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="412dp"
        android:layout_height="83dp"
        android:gravity="center_vertical"
        android:paddingStart="40dp"
        android:shadowColor="#000000"
        android:shadowDx="3.6"
        android:shadowDy="2.1"
        android:shadowRadius="1.9"
        android:text="Volume"
        android:textColor="#FFD700"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.379" />

    <SeekBar
        android:id="@+id/volumeScroll"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="347dp"
        android:layout_height="108dp"
        android:backgroundTint="@color/gold"
        android:backgroundTintMode="screen"
        android:forceDarkAllowed="false"
        android:hapticFeedbackEnabled="false"
        android:max="100"
        android:progress="50"
        android:progressBackgroundTintMode="add"
        android:saveEnabled="false"
        android:thumbTint="@color/gold"
        android:thumbTintMode="src_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444" />

    <TextView
        android:id="@+id/volumeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/volumeScroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volumeScroll"
        app:layout_constraintVertical_bias="0.299" />

</androidx.constraintlayout.widget.ConstraintLayout>